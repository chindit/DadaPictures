{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag edit</h1>

    <div class="button-margin">
        <a href="{{ path('tag_index') }}" class="btn btn-bg btn-primary">Back to the list</a>
    </div>

    <div class="form-float">
        <h3>Edit</h3>
        <form>
            {% for language in languages %}
                <div class="mb-3">
                    <label for="tag-{{ language }}" class="form-label">Tag in {{ language|upper }}</label>
                    <input
                            type="text"
                            class="form-control"
                            name="tag[{{ language }}]"
                            id="tag-{{ language }}"
                            minlength="3"
                            required
                            value="{{ tag.translation(language).name }}"
                    >
                </div>
            {% endfor %}
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

{% endblock %}
