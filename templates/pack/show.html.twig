{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="h1">{{ pack.name }}</h1>

    <p>Author: {{ pack.creator.username }}</p>
    <p>Uploaded at: {{ pack.created|date('Y-m-d H:i:s') }}</p>
    <p>Number of pictures: {{ pack.pictures|length }}</p>
    <section class="d-flex flex-wrap">
        {% for picture in pack.pictures %}
            <figure class="thumb">
                <a href="{{ path('view_picture', {'picture': picture.id}) }}">
                    <img
                            src="{{ path('view_thumbnail_picture', {'picture': (picture.id)}) }}"
                            alt="{{ pack.name }}"
                    />
                </a>
            </figure>
        {% endfor %}
    </section>

    <ul>
        <li>
            <a href="{{ path('pack_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pack_edit', { 'id': pack.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
