{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="page-container d-flex">
            {% if not is_granted("ROLE_USER") %}
            <div id="welcome">
                <h1><span>{% trans %}global.welcome{% endtrans %} {{ site_name }}</span></h1>
            </div>

            <div id="next">
                <p>{% trans %}global.registration{% endtrans %}</p>
                <p>{% trans %}global.please{% endtrans %} <a href="{{ path('app_login') }}">{% trans %}global.login{% endtrans %}</a> {% trans %}global.or{% endtrans %}
                <a href="{{ path('app_register') }}">{% trans %}global.register{% endtrans %}</a></p>
            </div>
            {% else %}
            <p>We need to update Homepage</p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
    #wrapper {
        width: 100vw;
        height: 100%;
    }
    .page-container {
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100%;
    }
</style>
{% endblock %}
