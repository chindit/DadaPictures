{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag a picture</h1>

    <div class="picture">
        <img id="tagged-picture" src="{{ asset('pictures/' ~ picture.filename) }}" alt="{{ picture.name }}"/>
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" class="btn btn-bg btn-primary" value="Create"/>
    {% if is_granted("ROLE_USER") %}
        <a href="{{ path('picture_delete', {'id': picture.id}) }}" class="form-button btn btn-danger">Delete</a>
    {% endif %}
    {{ form_end(form) }}
{% endblock %}
