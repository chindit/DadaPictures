{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pack</h1>

    <table class="table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pack.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pack.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if pack.created %}{{ pack.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if pack.updated %}{{ pack.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        <tr>
            <th>Creator</th>
            <td>{{ pack.creator.username }}</td>
        </tr>
            <tr>
                <th>Number of pictures</th>
                <td>{{ pack.pictures|length }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pack_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pack_edit', { 'id': pack.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
